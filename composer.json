{
	"name": "icanboogie/icanboogie",
	"type": "library",
	"description": "High-performance object-oriented micro-framework for PHP5.4+",
	"keywords": [ "framework" ],
	"homepage": "http://icanboogie.org/",
	"license": "BSD-3-Clause",

	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],

	"support": {
		"issues": "https://github.com/ICanBoogie/ICanBoogie/issues",
		"source": "https://github.com/ICanBoogie/ICanBoogie"
	},

	"minimum-stability": "dev",

	"require": {
		"php": ">=5.4.0",

		"icanboogie/common": ">=1.2",
		"icanboogie/datetime": "*",
		"icanboogie/inflector": "*",
		"icanboogie/errors": "*",
		"icanboogie/event": ">=1.2",

		"icanboogie/http": "2.x",
		"icanboogie/module": "2.x",
		"icanboogie/operation": "2.x",
		"icanboogie/prototype": "2.x",
		"icanboogie/routing": "2.x",

		"psr/log": "*"
	},

	"require-dev": {
		"icanboogie/activerecord": "2.x",
		"icanboogie/i18n": "2.x"
	},

	"suggest": {
		"icanboogie/activerecord": "ActiveRecord Object-relational mapping.",
		"icanboogie/cldr": "Provides internationalization for your application.",
		"icanboogie/i18n": "Provides localization for your application and nice internationalization helpers.",
		"icanboogie/image": "Provides image resizing, filling, and color resolving."
	},

	"autoload": {
		"psr-4": {
			"ICanBoogie\\AutoConfig\\": "auto-config/"
		},

		"classmap": [ "lib/" ],
		"files": [ "bootstrap.php", "helpers.php", "lib/helpers.php" ]
	},

	"scripts": {
		"post-autoload-dump": "ICanBoogie\\AutoConfig\\Generator::on_autoload_dump"
	}
}